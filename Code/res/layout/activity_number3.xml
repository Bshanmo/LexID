<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Number3Activity" >

    <Button
        android:id="@+id/rerollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Reroll!" />

	<Button
	    android:id="@+id/resetButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/rerollButton"
	    android:layout_alignBottom="@+id/rerollButton"
	    android:layout_toRightOf="@+id/linearLayout1"
	    android:text="Reset" />

	<TextView
	    android:id="@+id/Top"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="14dp"
	    android:text="@string/showresulttip"
	    android:textSize="24sp" />

	<LinearLayout
	    android:id="@+id/linearLayout0"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/Top"
	    android:layout_marginLeft="21dp"
	    android:layout_marginTop="24dp"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/markword1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_weight="1"
	        android:text="1" />

	    <TextView
	        android:id="@+id/markword2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.2"
	        android:text="2" />

	    <TextView
	        android:id="@+id/markword3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="3" />

	    <TextView
	        android:id="@+id/markword4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.2"
	        android:text="4" />

	    <TextView
	        android:id="@+id/markword5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="5" />

	    <TextView
	        android:id="@+id/markword6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.2"
	        android:text="6" />

	    <TextView
	        android:id="@+id/markword7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="7" />

	    <TextView
	        android:id="@+id/markword8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.2"
	        android:text="8" />

	    <TextView
	        android:id="@+id/markword9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="9" />

	    <TextView
	        android:id="@+id/markword10"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="7"
	        android:text="10" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/linearLayout0"
	    android:layout_centerHorizontal="true"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/word1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word1"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word2"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word3"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word4"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word5"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word7"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word6"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word8"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/word7"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word9"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="7"
	        android:text=" " />

	    <TextView
	        android:id="@+id/word10"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="7"
	        android:text=" " />
	</LinearLayout>

	<TextView
	    android:id="@+id/showArray0"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/rerollButton"
	    android:layout_alignLeft="@+id/linearLayout1"
	    android:layout_marginBottom="38dp"
	    android:text="TextView" 
	    android:visibility="gone"/>

</RelativeLayout>